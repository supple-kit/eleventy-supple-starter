{% extends 'layouts/base.njk' %}
{% set templateClass = 'tmpl-home' %}

{% block content %}
  <div class="o-flow">
    <h1>{{ title }}</h1>
    {{ content | safe }}

    {% set postList = collections.posts | head(-3) %}
    {% set maxPosts = postList.length | min(3) %}
    <h2>Latest {% if maxPosts == 1 %}post{% else %}{{ maxPosts }} posts{% endif %}</h2>
    {% include "templates/post-list.njk" %}
  </div>
{% endblock %}
