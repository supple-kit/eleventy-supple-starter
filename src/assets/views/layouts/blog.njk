{% extends 'layouts/base.njk' %}
{% set templateClass = 'tmpl-blog' %}

{% block content %}
  <div class="o-flow">
    <h1>{{ title }}</h1>
    {{ content | safe }}

    {% set postList = collections.posts %}
    {% set maxPosts = postList.length %}
    <h2>Latest {% if maxPosts == 1 %}post{% else %}{{ maxPosts }} posts{% endif %}</h2>
    {% include "components/post-list/post-list.njk" %}
  </div>
{% endblock %}
